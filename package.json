{
  "publisher": "OSpoon",
  "name": "dep-cmd",
  "displayName": "DepCmd",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@10.4.1",
  "description": "一个专为开发者设计的 VS Code 扩展，旨在简化开发阶段各种终端命令的使用，减少记忆负担，提高开发效率。",
  "author": "OSpoon <zxin088@gmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/OSpoon",
  "homepage": "https://github.com/OSpoon/DepCmd#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/OSpoon/DepCmd"
  },
  "bugs": {
    "url": "https://github.com/OSpoon/DepCmd/issues"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/OSpoon"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "res/icon.png",
  "files": [
    "LICENSE.md",
    "dist/*",
    "res/*"
  ],
  "engines": {
    "vscode": "^1.97.0"
  },
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "depCmd",
          "title": "Development Commands",
          "icon": "res/icon.png"
        }
      ]
    },
    "views": {
      "depCmd": [
        {
          "id": "depCmdView",
          "name": "Commands",
          "icon": "res/icon.png"
        }
      ]
    },
    "commands": [
      {
        "command": "depCmd.sendToTerminal",
        "title": "Send to Terminal",
        "icon": "$(terminal)"
      },
      {
        "command": "depCmd.refreshView",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "depCmd.searchCommands",
        "title": "Search Commands",
        "icon": "$(search)"
      },
      {
        "command": "depCmd.copyCommand",
        "title": "Copy Command",
        "icon": "$(copy)"
      },
      {
        "command": "depCmd.openCommandsFile",
        "title": "Edit Command Memories",
        "icon": "$(edit)",
        "category": "Development Commands"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "depCmd.openCommandsFile",
          "when": "view == depCmdView",
          "group": "navigation@1"
        },
        {
          "command": "depCmd.searchCommands",
          "when": "view == depCmdView",
          "group": "navigation@2"
        },
        {
          "command": "depCmd.refreshView",
          "when": "view == depCmdView",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "depCmd.sendToTerminal",
          "when": "view == depCmdView && viewItem == command",
          "group": "inline"
        },
        {
          "command": "depCmd.copyCommand",
          "when": "view == depCmdView && viewItem == command",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "build": "tsdown src/index.ts --external vscode",
    "dev": "nr build --watch --sourcemap",
    "prepare": "nr update",
    "update": "vscode-ext-gen --output src/generated/meta.ts",
    "lint": "eslint .",
    "vscode:prepublish": "nr build",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && nr publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.2.1",
    "@antfu/ni": "^23.3.1",
    "@types/node": "^22.13.4",
    "@types/vscode": "^1.97.0",
    "@vscode/vsce": "^3.2.2",
    "bumpp": "^10.0.3",
    "eslint": "^9.20.1",
    "esno": "^4.8.0",
    "pnpm": "^10.4.1",
    "reactive-vscode": "^0.2.10",
    "tsdown": "^0.9.6",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vitest": "^3.0.5",
    "vscode-ext-gen": "^1.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
