{
  "publisher": "OSpoon",
  "name": "dep-cmd",
  "displayName": "DepCmd",
  "version": "0.0.8",
  "private": true,
  "packageManager": "pnpm@10.4.1",
  "description": "一个专为开发者设计的 VS Code 扩展，旨在简化开发阶段各种终端命令的使用，减少记忆负担，提高开发效率。",
  "author": "OSpoon <zxin088@gmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/OSpoon",
  "homepage": "https://github.com/OSpoon/DepCmd#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/OSpoon/DepCmd"
  },
  "bugs": {
    "url": "https://github.com/OSpoon/DepCmd/issues"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/OSpoon"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "res/icon.png",
  "files": [
    "LICENSE.md",
    "dist/*",
    "res/*"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "depCmd",
          "title": "Development Commands",
          "icon": "res/icon.png"
        }
      ]
    },
    "views": {
      "depCmd": [
        {
          "id": "depCmdView",
          "name": "Commands",
          "icon": "res/icon.png"
        }
      ]
    },
    "configuration": {
      "title": "DepCmd",
      "properties": {
        "depCmd.enableProjectDetection": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic project detection to filter commands based on project type"
        },
        "depCmd.defaultCategory": {
          "type": "string",
          "default": "all",
          "description": "Default category to display (all or specific category name)"
        },
        "depCmd.projectDetection": {
          "type": "object",
          "default": {
            "pnpm": ["pnpm-lock.yaml"],
            "npm": ["package-lock.json"],
            "yarn": ["yarn.lock"],
            "python": ["requirements.txt", "pyproject.toml", "setup.py"],
            "rust": ["Cargo.toml"],
            "go": ["go.mod"],
            "docker": ["Dockerfile", "docker-compose.yml"],
            "git": [".git/"]
          },
          "description": "Simple project detection mapping: each key is a command category, and the value is an array of files/directories to look for",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "commands": [
      {
        "command": "depCmd.sendToTerminal",
        "title": "Send to Terminal",
        "icon": "$(terminal)"
      },
      {
        "command": "depCmd.refreshView",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "depCmd.searchCommands",
        "title": "Search Commands",
        "icon": "$(search)"
      },
      {
        "command": "depCmd.copyCommand",
        "title": "Copy Command",
        "icon": "$(copy)"
      },
      {
        "command": "depCmd.editCommand",
        "title": "Edit Command",
        "icon": "$(edit)"
      },
      {
        "command": "depCmd.deleteCommand",
        "title": "Delete Command",
        "icon": "$(trash)"
      },
      {
        "command": "depCmd.addCommand",
        "title": "Add New Command",
        "icon": "$(add)"
      },
      {
        "command": "depCmd.openCommandsFile",
        "title": "Edit Command Memories",
        "icon": "$(database)",
        "category": "Development Commands"
      },
      {
        "command": "depCmd.editCategory",
        "title": "Rename Category",
        "icon": "$(edit)",
        "category": "Development Commands"
      },
      {
        "command": "depCmd.deleteCategory",
        "title": "Delete Category",
        "icon": "$(trash)",
        "category": "Development Commands"
      },
      {
        "command": "depCmd.toggleProjectDetection",
        "title": "Toggle Project Detection",
        "icon": "$(eye)",
        "category": "Development Commands"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "depCmd.openCommandsFile",
          "when": "view == depCmdView",
          "group": "navigation@1"
        },
        {
          "command": "depCmd.searchCommands",
          "when": "view == depCmdView",
          "group": "navigation@2"
        },
        {
          "command": "depCmd.refreshView",
          "when": "view == depCmdView",
          "group": "navigation@3"
        },
        {
          "command": "depCmd.addCommand",
          "when": "view == depCmdView",
          "group": "navigation@4"
        }
      ],
      "view/item/context": [
        {
          "command": "depCmd.sendToTerminal",
          "when": "view == depCmdView && viewItem == command",
          "group": "inline@1"
        },
        {
          "command": "depCmd.editCommand",
          "when": "view == depCmdView && viewItem == command",
          "group": "inline@2"
        },
        {
          "command": "depCmd.copyCommand",
          "when": "view == depCmdView && viewItem == command",
          "group": "inline@3"
        },
        {
          "command": "depCmd.deleteCommand",
          "when": "view == depCmdView && viewItem == command",
          "group": "inline@4"
        },
        {
          "command": "depCmd.editCategory",
          "when": "view == depCmdView && viewItem == category",
          "group": "inline@1"
        },
        {
          "command": "depCmd.deleteCategory",
          "when": "view == depCmdView && viewItem == category",
          "group": "inline@2"
        }
      ]
    }
  },
  "scripts": {
    "build": "tsdown src/index.ts --external vscode",
    "dev": "nr build --watch --sourcemap",
    "prepare": "nr update",
    "update": "vscode-ext-gen --output src/generated/meta.ts",
    "lint": "eslint .",
    "vscode:prepublish": "nr build",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "release": "bumpp"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.19.0",
    "@antfu/ni": "^23.3.1",
    "@types/node": "^22.17.2",
    "@types/vscode": "^1.74.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vscode/vsce": "^3.6.0",
    "bumpp": "^10.2.3",
    "eslint": "^9.33.0",
    "esno": "^4.8.0",
    "pnpm": "^10.15.0",
    "reactive-vscode": "^0.2.22",
    "tsdown": "^0.9.9",
    "typescript": "^5.9.2",
    "vite": "^6.3.5",
    "vitest": "^3.2.4",
    "vscode-ext-gen": "^1.1.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
